<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>org.jibx.schema.org.opentravel._2012B.ws</groupId>
      <artifactId>opentravel-2012B-ws-reactor</artifactId>
      <version>1.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>org.jibx.schema.org.opentravel._2012B.hotel.ws.rest</artifactId>
    
    <packaging>bundle</packaging>
    <name>Schema Library - org.opentravel.hotel.ws.rest - 2012B - opentravel.org hotel rest server</name>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>${project.artifactId}.*;version=${project.version}</Export-Package>
                        <Import-Package>
                            org.osgi.*;resolution:=optional;version="[1.5,2)",	<!-- HACK - cxf-rt-databinding-jibx messes this up -->
                            *;resolution:=optional
                         </Import-Package>
                        <!-- Bundle-Activator>org.jibx.schema.org.opentravel._2012B.hotel.ws.rest.TourActivityRestService</Bundle-Activator -->
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
	<dependency>
		<groupId>org.jibx.schema.org.opentravel._2012B</groupId>
		<artifactId>org.jibx.schema.org.opentravel._2012B.hotel</artifactId>
		<version>1.2.0-SNAPSHOT</version>
	</dependency>
        
    <dependency>
	    <groupId>org.apache.cxf</groupId>
	    <artifactId>cxf-rt-frontend-jaxrs</artifactId>
	    <version>${cxf-version}</version>
	</dependency>
    <dependency>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-rt-databinding-jibx</artifactId>
        <version>${cxf-version}</version>
    </dependency>
  </dependencies>

</project>
