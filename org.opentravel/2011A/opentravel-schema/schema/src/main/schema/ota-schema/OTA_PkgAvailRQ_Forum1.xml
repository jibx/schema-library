<?xml version="1.0" encoding="UTF-8"?><!-- OPENTRAVEL SAMPLE INSTANCE --><!-- USE CASE SCENARIO: Package Availability: End user has requested a flight with the package and specified inbound and outbound airportsEnd user has specified: An arrival date at destination; The numbers of persons (children, teens, adults, infants); A theme (vacation/diving/honeymoon). --><OTA_PkgAvailRQ xmlns="http://www.opentravel.org/OTA/2003/05" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opentravel.org/OTA/2003/05 OTA_PkgAvailRQ.xsd" Target="Production" Version="4.000" TimeStamp="2010-10-18T21:10:30" EchoToken="7656">	<!-- Transaction originator (point of sale) information. -->	<POS>		<Source>			<RequestorID Type="5" ID="12345678">				<!-- Requestor ID of 5 = Travel Agency". Refer to OpenTravel Code List Unique ID Type (UIT). -->			</RequestorID>		</Source>	</POS>		<!-- Information identifying the package for which availability is being requested. -->	<PackageRequest Type="4" ShortDescription="Vacation" CabinType="Business">		<!-- Package Type 4 = "Air inclusive". Refer to OpenTravel Code List Package Type (PKG). -->		<!-- I used the ShortDescription attribute to denote the theme of the package. -->		<!-- CabinType is what I believe you are calling Seating Class. -->				<!--The Start date and Duration or End Date of the package. I used start date and uration in this example. -->		<DateRange Start="2011-04-20" Duration="P14N"/>			<!-- Duration of P14N = 14 nights. -->		<!-- The departure and arrival points for outward and/or return travel. Generally used when a TravelCode is used that represents a flight which has more than one domestic leg (e.g. Glasgow- Manchester- Palma.) -->		<Routing Direction="Inbound">			<Departure LocationCode="LAX">Los Angeles World Airports</Departure>			<Arrival LocationCode="BZE">Philip S. W. Goldson International Airport</Arrival>		</Routing>				<Routing Direction="Outbound">			<Departure LocationCode="BZE">Philip S. W. Goldson International Airport</Departure>			<Arrival LocationCode="LAX">Los Angeles World Airports</Arrival>		</Routing>	</PackageRequest>		<!-- Categorization of all Customers in a reservation or request. The CustomerCount element should be repeated as necessary. -->	<CustomerCounts>		<CustomerCount Code="10" Quantity="2"/>			<!-- Code of 10 = "Adult." Refer to OpenTravel Code List Age Qualifying Code (AQC). -->		<CustomerCount Code="8" Quantity="1" Age="5"/>			<!-- Code of 8 = "Child." Refer to OpenTravel Code List Age Qualifying Code (AQC). -->		<CustomerCount Code="8" Quantity="1" Age="9"/>			<!-- Code of 8 = "Child." Refer to OpenTravel Code List Age Qualifying Code (AQC). -->		<CustomerCount Code="7" Quantity="1" BirthDate="2010-02-14"/>			<!-- Code of 7 = "Infant." Refer to OpenTravel Code List Age Qualifying Code (AQC). -->	</CustomerCounts>	</OTA_PkgAvailRQ>