<?xml version="1.0" encoding="UTF-8"?><xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.opentravel.org/OTA/2003/05" targetNamespace="http://www.opentravel.org/OTA/2003/05" elementFormDefault="qualified" version="4.000" id="OTA2011A">  <xs:include schemaLocation="OTA_PkgCommonTypes.xsd"/>  <xs:annotation>    <xs:documentation xml:lang="en">All Schema files in the OpenTravel Alliance specification are made available according to the terms defined by the OpenTravel License Agreement at http://www.opentravel.org/Specifications/Default.aspx.</xs:documentation>  </xs:annotation>  <xs:element name="OTA_PkgAvailRQ">    <xs:annotation>      <xs:documentation xml:lang="en">A request for availability of a specific package.</xs:documentation>    </xs:annotation>    <xs:complexType>      <xs:sequence>        <xs:element name="POS" type="POS_Type" minOccurs="0">          <xs:annotation>            <xs:documentation xml:lang="en">Point of sale object.</xs:documentation>          </xs:annotation>        </xs:element>        <xs:element name="PackageRequest">          <xs:annotation>            <xs:documentation xml:lang="en">Information identifying the package for which availability is being requested.</xs:documentation>          </xs:annotation>          <xs:complexType>            <xs:sequence>              <xs:element name="DateRange" type="DateTimeSpanType" minOccurs="0">                <xs:annotation>                  <xs:documentation xml:lang="en">The Start date and Duration or End Date of the package.</xs:documentation>                </xs:annotation>              </xs:element>              <xs:element name="Routing" minOccurs="0" maxOccurs="2">                <xs:annotation>                  <xs:documentation xml:lang="en">The departure and arrival points for outward and/or return travel. Generally used when the TravelCode represents a flight which has more than one domestic leg (e.g. Glasgow- Manchester- Palma.)</xs:documentation>                </xs:annotation>                <xs:complexType>                  <xs:sequence>                    <xs:element name="Departure" type="LocationType">                      <xs:annotation>                        <xs:documentation xml:lang="en">The departure location for the travel route.</xs:documentation>                      </xs:annotation>                    </xs:element>                    <xs:element name="Arrival" type="LocationType">                      <xs:annotation>                        <xs:documentation xml:lang="en">The arrival location for the travel route.</xs:documentation>                      </xs:annotation>                    </xs:element>                  </xs:sequence>                  <xs:attribute name="Direction" type="AirTripType"/>                </xs:complexType>              </xs:element>            </xs:sequence>            <xs:attributeGroup ref="ID_OptionalGroup">              <xs:annotation>                <xs:documentation xml:lang="en">A key to uniquely identify a package arrangement.</xs:documentation>              </xs:annotation>            </xs:attributeGroup>            <xs:attribute name="Type" type="OTA_CodeType" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The type of package e.g. 4 I(Air Inclusive), 3 (Flight-only) etc. Refer to OpenTravel Code List Package Type (PKG).</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="TravelCode" type="PkgTravelCode" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The supplier's code to identify the travel arrangement for a package.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="TourCode" type="StringLength1to8" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The supplier's code to identify the accommodation/tour arrangement for a package.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="ShortDescription" type="ShortDescriptionType" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">A short description of a holiday package.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="BoardCode" type="MealPlanCode" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The code for a meal plan e.g. AB- as brochure, AI- all inclusive, BB- bed and breakfast, FB- full board, HB- Half Board, RO- room only,SC- self catering.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="PromotionCode" type="StringLength1to16" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">A code to request a specific promotional price.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="BrandCode" type="StringLength1to8" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The code for the tour operator's product brand e.g. Thomascook, JMC, Sunset etc. </xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="ProductCode" type="StringLength1to8" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The tour operator's code for the product within the brand e.g. Summersun, Greece etc. </xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="FreeChildQuantity" type="Numeric1to99" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">Number of Free Children requested.</xs:documentation>              </xs:annotation>            </xs:attribute>            <xs:attribute name="CabinType" type="CabinType" use="optional">              <xs:annotation>                <xs:documentation xml:lang="en">The flight cabin/class required. </xs:documentation>              </xs:annotation>            </xs:attribute>          </xs:complexType>        </xs:element>        <xs:element name="CustomerCounts" type="CustomerCountsType" minOccurs="0">          <xs:annotation>            <xs:documentation xml:lang="en">Categorization of all Customers in a reservation or request.</xs:documentation>          </xs:annotation>        </xs:element>        <xs:element name="URL" type="URL_Type" minOccurs="0">          <xs:annotation>            <xs:documentation xml:lang="en">An alternative method of identifying the full tour package. </xs:documentation>          </xs:annotation>        </xs:element>        <xs:element ref="TPA_Extensions" minOccurs="0"/>      </xs:sequence>      <xs:attributeGroup ref="OTA_PayloadStdAttributes"/>      <xs:attributeGroup ref="ReqRespVersion"/>      <xs:attributeGroup ref="MaxResponsesGroup"/>    </xs:complexType>  </xs:element></xs:schema>