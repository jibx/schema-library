<?xml version="1.0" encoding="UTF-8"?><!-- OPENTRAVEL SAMPLE INSTANCE --><!-- USE CASE SCENARIO: Rail Schedule Request for Schedules between Tampa and New York City Penn Station for a Specified Departure Date. --><!-- USE CASE DETAILS: An end user uses the Amtrak website to find a train schedule between Tampa Florida and Penn Station in New York City. They are flexible in their departure time so they only specify a departure date and the origin city and destination city and preferred rail station. --><OTA_RailScheduleRQ TimeStamp="2011-02-03T10:25:30" EchoToken="7656" Target="Production" Version="1.000" PrimaryLangID="ENG" MaxResponses="30" xmlns="http://www.opentravel.org/OTA/2003/05" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opentravel.org/OTA/2003/05OTA_RailScheduleRQ.xsd">	<!-- Transaction originator (point of sale) information. -->	<POS>		<Source>			<RequestorID Type="1" ID="amtrak.com"/>				<!-- RequestorID Type 1: Customer (See OpenTravel Code List Unique ID Type.) -->		</Source>	</POS>	<!--The search criteria for a rail schedule search request. -->	<RailScheduleQuery>		<OriginDestinationInformation>			<DepartureDateTime>2011-08-13</DepartureDateTime>			<OriginLocation LocationCode="TPA">Tampa, FL</OriginLocation>			<DestinationLocation LocationCode="NYP">New York - Penn Station, NY</DestinationLocation>		</OriginDestinationInformation>	</RailScheduleQuery>	</OTA_RailScheduleRQ>