<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>org.jibx.schema.org.opentravel._2011B.ws</groupId>
      <artifactId>opentravel-2011B-ws-reactor</artifactId>
      <version>1.1.4</version>
    </parent>

    <artifactId>org.jibx.schema.org.opentravel._2011B.ping.ws.service</artifactId>
    
    <packaging>bundle</packaging>
    <name>Schema Library - org.opentravel.ping.ws.service - 2011B - opentravel.org ping web service</name>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            ${project.artifactId}.*;version=${project.version},
                        </Export-Package>
                        <Import-Package>
	                        *;resolution:=optional,
                        </Import-Package>
                        <Require-Bundle>org.apache.cxf.bundle</Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

  <dependencies>
	<dependency>
		<groupId>org.jibx.schema.org.opentravel._2011B</groupId>
		<artifactId>org.jibx.schema.org.opentravel._2011B.ping</artifactId>
		<version>1.1.4</version>
	</dependency>
	
    <dependency>
	    <groupId>org.apache.cxf</groupId>
	    <artifactId>cxf-rt-frontend-jaxws</artifactId>
	    <version>${cxf-version}</version>
    </dependency>
  </dependencies>

</project>
