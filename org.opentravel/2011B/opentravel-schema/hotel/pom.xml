<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jibx.schema.org.opentravel._2011B</groupId>
    <artifactId>opentravel-schema-reactor</artifactId>
    <version>1.2.0-SNAPSHOT</version>
  </parent>
  
  <artifactId>org.jibx.schema.org.opentravel._2011B.hotel</artifactId>
  <packaging>bundle</packaging>

  <name>Schema Library - org.opentravel.hotel - 2011B - opentravel.org hotel schema</name>

  <properties>
    <systemName>hotel</systemName>
    <schemaFilter>OTA_Hotel</schemaFilter>
  </properties>

  <build>
    <plugins>

      <plugin>
        <groupId>org.jibx</groupId>
        <artifactId>jibx-maven-plugin</artifactId>

        <executions>
          <execution>
            <id>generate-java-code-from-schema</id>
            <goals>
              <goal>schema-codegen</goal>
            </goals>
	        <configuration>
	        	<schemaLocation>${schemaLocation}</schemaLocation>
	            <customizations>
	            	<customization>${customization-file}</customization>
	            </customizations>
	            <includeSchemas>
	                <includeSchema>${schemaFilter}*RS.xsd</includeSchema>
	                <includeSchema>${schemaFilter}*RQ.xsd</includeSchema>
	            </includeSchemas>
	            <excludes>	<!-- This is in the base package -->
	            	<exclude>OTA_HotelPreferences.xsd</exclude>
	            	<exclude>OTA_HotelCommonTypes.xsd</exclude>
    		        <exclude>OTA_HotelReservation.xsd</exclude>
    		    </excludes>
              <includeBaseBindings>
                <includeBaseBinding>
                  <includes>
                    <include>${basedir}/../base.hotelres/target/generated-sources/binding.xml</include>
                  </includes>
                </includeBaseBinding>
              </includeBaseBindings>
              <defaultNamespace>${defaultNamespace}</defaultNamespace>
	        </configuration>
          </execution>
          <execution>
              <id>compile-binding</id>
              <goals>
                  <goal>bind</goal>
              </goals>
              <configuration>
                  <schemaBindingDirectory>target/generated-sources</schemaBindingDirectory>
                  <includeSchemaBindings>
                    <includeSchemaBinding>binding.xml</includeSchemaBinding>
                  </includeSchemaBindings>
              </configuration>
          </execution>
        </executions>
	  </plugin>

  </plugins>
  </build>
 
  <dependencies>
    <dependency>
      <groupId>org.jibx.schema.org.opentravel._2011B</groupId>
      <artifactId>org.jibx.schema.org.opentravel._2011B.base.hotelres</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

</project>
