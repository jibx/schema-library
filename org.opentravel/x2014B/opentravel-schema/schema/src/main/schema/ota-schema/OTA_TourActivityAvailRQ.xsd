<?xml version="1.0" encoding="UTF-8"?><xs:schema xmlns="http://www.opentravel.org/OTA/2003/05" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.opentravel.org/OTA/2003/05" elementFormDefault="qualified" version="4.000" id="OTA2014B">	<xs:annotation>		<xs:documentation source="Description" xml:lang="en">ALL SCHEMA FILES IN THE OPENTRAVEL ALLIANCE SPECIFICATION ARE MADE AVAILABLE ACCORDING TO THE TERMS DEFINED BY THE OPENTRAVEL LICENSE AGREEMENT AT http://www.opentravel.org/Specifications/Default.aspx</xs:documentation>	</xs:annotation>	<xs:include schemaLocation="OTA_TourActivityCommonTypes.xsd"/>	<xs:element name="OTA_TourActivityAvailRQ">		<xs:annotation>			<xs:documentation xml:lang="en">This message is used to request availability for a day tour and/or activity selected by the customer. Note that the tour and/or activity code is known to the availability system, e.g. a unique ID and/or name is being passed in the request in addition to date/ time, customer types and counts.</xs:documentation>		</xs:annotation>		<xs:complexType>			<xs:sequence>				<xs:element name="POS" type="POS_Type" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="en">Point of sale information for the initiator of the availability request.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="ProcessingInformation" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="en">Information that may directly impact how the receiving system processes the request message.</xs:documentation>					</xs:annotation>					<xs:complexType>						<xs:attribute name="MaxResponses" type="xs:positiveInteger" use="optional">							<xs:annotation>								<xs:documentation xml:lang="en">A positive integer value that indicates the maximum number of responses desired in the return.</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="MoreDataEchoToken" type="xs:string" use="optional">							<xs:annotation>								<xs:documentation xml:lang="en">The Tour/Activity response message may return a value in this element if there is additional data available that is not contained in the response message. The text value should be echoed in this request to indicate where to begin the next block of data.</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="LanguageCode" type="xs:language" use="optional">							<xs:annotation>								<xs:documentation xml:lang="en">Identification of the language used for any descriptive information.</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="DisplayCurrency" type="ISO4217" use="optional">							<xs:annotation>								<xs:documentation source="Use" xml:lang="en">The requested display currency in ISO 4217 encoding.</xs:documentation>								<xs:documentation source="Reference" xml:lang="en">(Reference): http://www.opentraveldevelopersnetwork.com/Supported_ISO_Standards.php</xs:documentation>								<xs:documentation source="More Info" xml:lang="en">(More Info): http://www.opentraveldevelopersnetwork.com/2012A_SchemaDoc/DisplayCurrency</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="PricingCurrency" type="ISO4217" use="optional">							<xs:annotation>								<xs:documentation source="Use" xml:lang="en">The requested pricing currency in ISO 4217 encoding.</xs:documentation>								<xs:documentation source="Example" xml:lang="en">CAD = Canadian Dollar | USD = United States Dollar | EUR = Euro</xs:documentation>								<xs:documentation source="Reference" xml:lang="en">http://www.opentraveldevelopersnetwork.com/Supported_ISO_Standards.php</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="DecimalPlaces" type="xs:nonNegativeInteger" use="optional">							<xs:annotation>								<xs:documentation source="Use" xml:lang="en">The ISO 4217 standard "minor unit" for the number of decimal places for a the display and pricing currency.</xs:documentation>								<xs:documentation source="Developer Notes" xml:lang="en">The ISO 4217 standard "minor unit" is typically used when the amount provided includes the minor unit of currency without a decimal point (e.g., USD 8500 needs DecimalPlaces="2" to represent $85).</xs:documentation>							</xs:annotation>						</xs:attribute>						<xs:attribute name="AlternateAvailInd" type="xs:boolean" use="optional">							<xs:annotation>								<xs:documentation xml:lang="en">If TRUE, tours and activities that do meet all specified criteria should be returned.</xs:documentation>							</xs:annotation>						</xs:attribute>					</xs:complexType>				</xs:element>				<xs:element name="TourActivity">					<xs:annotation>						<xs:documentation xml:lang="en">Criteria for a tour/ activity availability request.</xs:documentation>					</xs:annotation>					<xs:complexType>						<xs:sequence>							<xs:element name="BasicInfo" maxOccurs="9">								<xs:annotation>									<xs:documentation xml:lang="en">Core identifying information for the tour(s)/activity(s) which availability is being requested for.</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:complexContent>										<xs:extension base="TourActivityID_Type"/>									</xs:complexContent>								</xs:complexType>							</xs:element>							<xs:element name="AccessibilityRequirement" type="TourActivityAccessibilityReqType" minOccurs="0">								<xs:annotation>									<xs:documentation xml:lang="en">Physically challenged accessibility preferences. NOT ALL TOUR/ ACTIVITY RESERVATION SYSTEMS CAN DETERMINE AVAILABILITY BASED ON ACCESSIBILITY CRITERIA. Check with your trading partner before implementing this functionality.</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="Discount" minOccurs="0" maxOccurs="unbounded">								<xs:annotation>									<xs:documentation xml:lang="en">Promotion codes and discount program information that may influence availability.</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:sequence>										<xs:element name="PromotionCode" minOccurs="0" maxOccurs="9">											<xs:annotation>												<xs:documentation xml:lang="en">One or more promotion codes for promotional pricing.Up to 9 may be specified for each participant category and/ or group.</xs:documentation>											</xs:annotation>											<xs:complexType>												<xs:simpleContent>													<xs:extension base="xs:string"/>												</xs:simpleContent>											</xs:complexType>										</xs:element>										<xs:element name="Program" minOccurs="0">											<xs:annotation>												<xs:documentation xml:lang="en">Discount program information.</xs:documentation>											</xs:annotation>											<xs:complexType>												<xs:sequence>													<xs:element name="Provider" type="CompanyNameType" minOccurs="0">														<xs:annotation>															<xs:documentation xml:lang="en">The company name associated with the discount program.</xs:documentation>														</xs:annotation>													</xs:element>												</xs:sequence>												<xs:attribute name="Name" type="xs:string" use="optional">													<xs:annotation>														<xs:documentation xml:lang="en">The name of a discount program, e.g. "Day Pass" or "Gold Card".</xs:documentation>													</xs:annotation>												</xs:attribute>												<xs:attribute name="Description" type="xs:string" use="optional">													<xs:annotation>														<xs:documentation xml:lang="en">A description of the discount program.</xs:documentation>													</xs:annotation>												</xs:attribute>											</xs:complexType>										</xs:element>									</xs:sequence>									<xs:attribute name="ParticipantCategoryID" type="RPH_Type" use="optional">										<xs:annotation>											<xs:documentation xml:lang="en">A unique ID (that is assigned elsewhere in the message) that associates a participant category with other information.</xs:documentation>										</xs:annotation>									</xs:attribute>									<xs:attribute name="GroupID" type="RPH_Type" use="optional">										<xs:annotation>											<xs:documentation xml:lang="en">A unique ID (that is assigned elsewhere in the message) that associates a group with other information.</xs:documentation>										</xs:annotation>									</xs:attribute>								</xs:complexType>							</xs:element>							<xs:element name="Location" type="TourActivityLocationType" minOccurs="0" maxOccurs="9">								<xs:annotation>									<xs:documentation xml:lang="en">Physical address, region and geocoding tour/ activity location information.</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="NegotiatedRate" type="TourActivityNegotiatedPricing" minOccurs="0" maxOccurs="9">								<xs:annotation>									<xs:documentation xml:lang="en">Negotiated rate information that may influence availability.</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="Schedule" minOccurs="0" maxOccurs="9">								<xs:annotation>									<xs:documentation xml:lang="en">The requested start date(s) and optional time(s) of the tour/ activity search period. Up to nine date/time combinations may be requested. Note that for each start or end period date, up to 5 times may also be requested.</xs:documentation>									<xs:documentation source="Developer" xml:lang="en">Note that the @Duration attribute should not be used.</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:sequence>										<xs:element name="StartTime" type="TimeOrDateTimeType" minOccurs="0" maxOccurs="5">											<xs:annotation>												<xs:documentation xml:lang="en">The requested start time. Up to 5 may be specified for each requested date.</xs:documentation>											</xs:annotation>										</xs:element>									</xs:sequence>									<xs:attributeGroup ref="DatePeriodGroup">										<xs:annotation>											<xs:documentation xml:lang="en">The date of the tour/ activity.</xs:documentation>										</xs:annotation>									</xs:attributeGroup>								</xs:complexType>							</xs:element>							<xs:choice>								<xs:annotation>									<xs:documentation xml:lang="en">A choice between specifying participant quantity/ category and/or group information.</xs:documentation>								</xs:annotation>								<xs:element name="ParticipantCount" maxOccurs="unbounded">									<xs:annotation>										<xs:documentation xml:lang="en">Specifies the number of participants and optionally the participant category.</xs:documentation>									</xs:annotation>									<xs:complexType>										<xs:complexContent>											<xs:extension base="TourActivityParticipantCategoryType">												<xs:attribute name="FreeChildrenQty" type="Numeric0to99" use="optional">													<xs:annotation>														<xs:documentation xml:lang="en">The number of free child places being requested.</xs:documentation>													</xs:annotation>												</xs:attribute>											</xs:extension>										</xs:complexContent>									</xs:complexType>								</xs:element>								<xs:element name="GroupInfo">									<xs:annotation>										<xs:documentation xml:lang="en">Group information for which availability is being requested.</xs:documentation>									</xs:annotation>									<xs:complexType>										<xs:attribute name="GroupName" type="xs:string" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">A group name that participant(s) are associated with.</xs:documentation>											</xs:annotation>										</xs:attribute>										<xs:attribute name="GroupID" type="RPH_Type" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">A unique identifier for a group that may be used elsewhere in this message.</xs:documentation>											</xs:annotation>										</xs:attribute>										<xs:attribute name="MinGroupSize" type="xs:positiveInteger" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">The minimum quantity of participants in a group.</xs:documentation>											</xs:annotation>										</xs:attribute>										<xs:attribute name="MaxGroupSize" type="xs:positiveInteger" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">The maximum quantity of participants in a group.</xs:documentation>											</xs:annotation>										</xs:attribute>										<xs:attribute name="KnownGroupSize" type="xs:positiveInteger" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">The actual quantity of participants in a group.</xs:documentation>											</xs:annotation>										</xs:attribute>										<xs:attribute name="GroupCode" type="xs:string" use="optional">											<xs:annotation>												<xs:documentation xml:lang="en">A group code that participant(s) are associated with.</xs:documentation>											</xs:annotation>										</xs:attribute>									</xs:complexType>								</xs:element>							</xs:choice>							<xs:element name="MultimodalOffer" type="MultiModalOfferType" minOccurs="0">								<xs:annotation>									<xs:documentation source="Description" xml:lang="en">Multimodal offer influencers.</xs:documentation>								</xs:annotation>							</xs:element>						</xs:sequence>					</xs:complexType>				</xs:element>				<xs:element ref="TPA_Extensions" minOccurs="0"/>			</xs:sequence>			<xs:attributeGroup ref="OTA_PayloadStdAttributes"/>		</xs:complexType>	</xs:element></xs:schema>