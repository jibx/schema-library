<?xml version="1.0" encoding="UTF-8"?><!-- OPENTRAVEL SAMPLE INSTANCE --><!-- USE CASE SCENARIO: Rates & Availability with Vehicle Rental No Show Fees. --><!-- USE CASE DETAILS: A travel agent does a rates and availability request for 4 door compact car picked-up at and returned to the Indianapolis Airport. --><OTA_VehAvailRateRQ xmlns="http://www.opentravel.org/OTA/2003/05" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opentravel.org/OTA/2003/05 OTA_VehAvailRateRQ.xsd" TimeStamp="2010-07-10T17:26:17.34085-04:00" Target="Production" Version="2.000">	<!-- Point of sale (transaction initiator) information. -->	<POS>		<Source ISOCountry="US" ISOCurrency="USD">			<RequestorID Type="5" ID="12345678"/>			<!-- Requestor Type of 5 is "Travel Agency" - See OpenTravel Code List Unique Id Type (UIT). -->		</Source>	</POS>		<!-- Request  for vehicles that are available. -->	<VehAvailRQCore Status="Available">			<!-- Core Information - including pickup/return dates and locations. -->	   <VehRentalCore PickUpDateTime="2010-07-18T12:00:00" ReturnDateTime="2010-07-26T15:00:00">	   		  <!-- A code to identify the pick up location, along with an optional code context. -->		  <PickUpLocation LocationCode="IND" CodeContext="AC" />		  		  <!-- A code to identify the return location, along with an optional code context. -->		  <ReturnLocation LocationCode="IND" CodeContext="AC" />		</VehRentalCore>		<!-- Indicates the preferred Vendor Company for the vehicle rental.  -->		<VendorPrefs>			<VendorPref CompanyShortName="Ace" TravelSector="2" Code="AC" >Ace Rent a Car</VendorPref>			<!-- Travel Sector 2 is "Car" - See OpenTravel Code List Travel Sector (TVS). -->		</VendorPrefs>				<!-- Indicates any preferences for  the vehicle, such as type, class, transmission, air conditioning. -->		<VehPrefs>			<VehPref AirConditionInd="true" TransmissionType="Automatic" AirConditionPref="Only" TransmissionPref="Only">							<!-- The type of the vehicle. -->				<VehType VehicleCategory="1" DoorCount="4"/>				<!-- Vehicle Category of 1 is "Car" - See OpenTravel Code List Vehicle Category (VEC). -->				<!-- The class of the vehicle. -->				<VehClass Size="4"/>				<!-- Vehicle Class Size of 4 is "Compact" - See OpenTravel Code List Size (SIZ). -->			</VehPref>		</VehPrefs>	</VehAvailRQCore>	<!-- The supplemental information associated with the request for availability of a rental vehicle. -->	<VehAvailRQInfo>			<!-- Information on the one primary driver and, optionally, several additional drivers. This may be used to provide a frequent renter number. -->		<Customer>			<Primary>				<PersonName>					<GivenName>Joe</GivenName>					<Surname>Bailey</Surname>				</PersonName>				<CustLoyalty MembershipID="H3P200" />			</Primary>		</Customer>				<!-- Details of the arrival transportation. -->		<ArrivalDetails TransportationCode="14" Number="2935">		<!-- Transportation code 14 is "Plane" - See OpenTravel Code List Transportation Code (TRP). -->			<OperatingCompany Code="AA"/>		</ArrivalDetails>			</VehAvailRQInfo></OTA_VehAvailRateRQ>