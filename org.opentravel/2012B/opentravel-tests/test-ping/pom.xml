<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jibx.schema.org.opentravel._2012B.test</groupId>
    <artifactId>opentravel-2012B-tests-reactor</artifactId>
    <version>1.2.0-SNAPSHOT</version>
  </parent>

  <artifactId>org.jibx.schema.org.opentravel._2012B.test.ping</artifactId>

  <packaging>bundle</packaging>

  <name>Schema Library - opentravel.org - test-ping</name>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope> <!-- This better be provided -->
    </dependency>

    <dependency>
      <groupId>org.jibx.schema.org.opentravel._2012B</groupId>
      <artifactId>org.jibx.schema.org.opentravel._2012B.ping</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Activator>org.jibx.schema.org.opentravel._2012B.test.ping.PingTest</Bundle-Activator>
          </instructions>
        </configuration>
      </plugin>

      <plugin> 
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>run</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
            <mainClass>org.jibx.schema.org.opentravel._2012B.test.ping.PingTest</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
