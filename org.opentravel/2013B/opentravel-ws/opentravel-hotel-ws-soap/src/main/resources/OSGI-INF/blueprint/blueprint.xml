<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                         http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd">

    <!-- OSGi properties -->
   <property-placeholder persistent-id="org.jibx.schema.org.opentravel._2013B.hotel.ws.soap"
    xmlns="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
    <default-properties>
      <property name="httpAddress" value="http://0.0.0.0:8092/soap/hotel" />
    </default-properties>
   </property-placeholder>

   <!-- SOAP Server -->
   <jaxws:endpoint id="hotel"
      implementor="#hotelSoapSvc"
      address="${httpAddress}"
      wsdlLocation="hotel.wsdl">
        <jaxws:dataBinding>
          <bean class="org.apache.cxf.jibx.JibxDataBinding" />
        </jaxws:dataBinding>
   </jaxws:endpoint>	  

   <!-- hotel SOAP service -->
   <bean id="hotelSoapSvc" class="org.jibx.schema.org.opentravel._2013B.hotel.ws.soap.impl.HotelImpl">
        <property name="hotelService" ref="hotelSoapServiceRef" />
   </bean>

   <!-- OSGI Service listener -->
	<reference id="hotelSoapServiceRef"
	    interface="org.jibx.schema.org.opentravel._2013B.hotel.ws.HotelService"
	    availability="optional" /> 

</blueprint>
