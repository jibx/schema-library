<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                         http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd">

    <!-- OSGi properties -->
   <property-placeholder persistent-id="org.jibx.schema.org.opentravel._2012B.touractivity.ws.soap"
    xmlns="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
    <default-properties>
      <property name="httpAddress" value="http://0.0.0.0:8092/soap/touractivity" />
    </default-properties>
   </property-placeholder>

   <!-- SOAP Server -->
   <jaxws:endpoint id="touractivity"
      implementor="#tourActivitySoapSvc"
      address="${httpAddress}"
      wsdlLocation="touractivity.wsdl">
        <jaxws:dataBinding>
          <bean class="org.apache.cxf.jibx.JibxDataBinding" />
        </jaxws:dataBinding>
   </jaxws:endpoint>	  

   <!-- tourActivity SOAP service -->
   <bean id="tourActivitySoapSvc" class="org.jibx.schema.org.opentravel._2012B.touractivity.ws.soap.impl.TourActivityImpl">
        <property name="tourActivityService" ref="tourActivitySoapServiceRef" />
   </bean>

   <!-- OSGI Service listener -->
	<reference id="tourActivitySoapServiceRef"
	    interface="org.jibx.schema.org.opentravel._2012B.touractivity.ws.TourActivityService"
	    availability="optional" /> 

</blueprint>
