<?xml version="1.0" encoding="UTF-8"?><!-- OPENTRAVEL SAMPLE INSTANCE --><!-- USE CASE SCENARIO: Micro-Donation Information Collected in a Hotel Reservation Request. --><!-- USE CASE DETAILS: An 8.00 (C$) Massive Good donation is made from a Canadian citizen using an American Express credit card with a donation receipt not requested. Because the donor’s residence is in Canada, a “StateCode” is required. --><OTA_HotelResRQ xmlns="http://www.opentravel.org/OTA/2003/05" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opentravel.org/OTA/2003/05 OTA_HotelResRQ.xsd" Version="5.000">	<POS>		<Source ISOCurrency="CAD"/>	</POS>	<HotelReservations>		<HotelReservation>			<RoomStays>				<RoomStay>					<RoomTypes>						<RoomType NumberOfUnits="1"/>					</RoomTypes>					<RatePlans>						<RatePlan RatePlanCode="CORA999"/>					</RatePlans>					<GuestCounts>						<GuestCount AgeQualifyingCode="10" Count="1"/>						<!-- Age Qualifying Code 10 = adult from OTA code table AQC-->					</GuestCounts>					<TimeSpan End="2010-08-12" Start="2010-08-10"/>					<Guarantee>						<GuaranteesAccepted>							<GuaranteeAccepted>								<PaymentCard CardCode="AX" CardNumber="340022224444666" ExpireDate="0515">									<CardHolderName>Gagnon</CardHolderName>								</PaymentCard>							</GuaranteeAccepted>						</GuaranteesAccepted>					</Guarantee>					<BasicPropertyInfo ChainCode="MC" HotelCode="DENWE"/>				</RoomStay>			</RoomStays>			<ResGuests>				<ResGuest>					<Profiles>						<ProfileInfo>							<Profile ProfileType="1">							<!-- Profile Type 1 = customer from OTA code table PRT -->								<Customer>									<PersonName>										<NamePrefix>Mr.</NamePrefix>										<GivenName>Daniel</GivenName>										<Surname>Gagnon</Surname>									</PersonName>									<Telephone PhoneNumber="6475559999" PhoneTechType="1"/>									<!-- Phone Tech Type 1 = voice from OTA code table PTT -->									<Email>daniel.gagnon@corp.com</Email>									<Address>										<AddressLine>123 Church Street South.</AddressLine>										<CityName>Toronto</CityName>										<PostalCode>ABC 123</PostalCode>										<StateProv>Ontario</StateProv>										<CountryName>CAN</CountryName>									</Address>								</Customer>							</Profile>						</ProfileInfo>					</Profiles>				</ResGuest>			</ResGuests>		</HotelReservation>	</HotelReservations>		<!-- MICRO DONATION INFORMATION -->	<DonationInformation StateCode="ON" GDS_ID="1W" Language="GB" CountryCode="CA" AskForReceiptInd="false">		<!-- Front Office information (required for a Massive Good donation.)  -->		<FrontOfficeInfo ProductVersion="MyProductVersion" ProductName="MyProductName" OfficeID="MyOfficeID" CorporateID="MyCorporateID"/>		<!-- Required credit card information  -->		<CreditCardInfo CardCode="AX" ExpireDate="0415" CardNumber="340022224444666" Currency="CAD" DonationAmount="8.00">			<!-- CardCode "AX" is American Express -->			<CardHolderName>Daniel Gagnon</CardHolderName>		</CreditCardInfo>	</DonationInformation>	</OTA_HotelResRQ>