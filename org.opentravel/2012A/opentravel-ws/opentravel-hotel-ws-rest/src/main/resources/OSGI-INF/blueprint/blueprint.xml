<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
  xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
  xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
  xmlns:cxf="http://cxf.apache.org/blueprint/core"
  xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
  http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd
  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
  ">
  <!-- cxf:bus> *uncomment this to see cxf debugging messages*
    <cxf:features>
      <cxf:logging/>
    </cxf:features>
  </cxf:bus -->
  
  <!-- OSGI property for http path -->
  <property-placeholder persistent-id="org.jibx.schema.org.opentravel._2012A.hotel.ws.rest"
    xmlns="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
    <default-properties>
      <property name="httpAddress" value="http://0.0.0.0:8092/rest//hotel" />
    </default-properties>
  </property-placeholder>

  <!-- JAX-RS Server definition -->
   <jaxrs:server id="hotelRestService" address="${httpAddress}" >
      <jaxrs:serviceBeans>
        <ref component-id="hotelRestSvc"/>
      </jaxrs:serviceBeans>
      <jaxrs:dataBinding>
          <bean class="org.apache.cxf.jibx.JibxDataBinding" />
      </jaxrs:dataBinding>
   </jaxrs:server>
   
   <!-- hotel RESTful service -->
   <bean id="hotelRestSvc" class="org.jibx.schema.org.opentravel._2012A.hotel.ws.rest.HotelRestService">
        <property name="hotelService" ref="hotelRestServiceRef" />
   </bean>

   <!-- OSGI Service listener -->
	<reference id="hotelRestServiceRef"
	    interface="org.jibx.schema.org.opentravel._2012A.hotel.ws.HotelService"
	    availability="optional" />

</blueprint>