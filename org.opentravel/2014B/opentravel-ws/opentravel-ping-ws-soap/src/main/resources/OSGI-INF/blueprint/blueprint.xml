<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                         http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd">

  <property-placeholder persistent-id="org.jibx.schema.org.opentravel._2014B.ping.ws.soap"
    xmlns="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
    <default-properties>
      <property name="httpAddress" value="http://0.0.0.0:8092/soap/ping" />
    </default-properties>
  </property-placeholder>

   <!-- SOAP Server -->
   <jaxws:endpoint id="ping"
      implementor="#pingSoapSvc"
      address="${httpAddress}"
      wsdlLocation="ping.wsdl">
        <jaxws:dataBinding>
          <bean class="org.apache.cxf.jibx.JibxDataBinding" />
        </jaxws:dataBinding>
   </jaxws:endpoint>	  

   <!-- ping SOAP service -->
   <bean id="pingSoapSvc" class="org.jibx.schema.org.opentravel._2014B.ping.ws.soap.impl.PingImpl">
        <property name="pingService" ref="pingSoapServiceRef" />
   </bean>

   <!-- OSGI Service listener -->
	<reference id="pingSoapServiceRef"
	    interface="org.jibx.schema.org.opentravel._2014B.ping.ws.PingService"
	    availability="optional" /> 

</blueprint>
